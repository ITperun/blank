            {/foreach}

            {include content}
        </main>
    </div>

    <footer>
        &copy; {date('Y')} Klub deskov√Ωch her ‚Äî ≈°koln√≠ projekt (MOP)
    </footer>

    {block scripts}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://unpkg.com/nette-forms@3"></script>
    {/block}
</body>
</html>
