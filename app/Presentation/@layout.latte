{import 'form-bootstrap5.latte'}

<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">

    <title>{ifset title}{include title|stripHtml} | {/ifset}Klub deskov√Ωch her</title>

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          crossorigin="anonymous">

    <style>
        :root {
            --orange-main: #f79c42;
            --orange-light: #fff1dc;
            --orange-dark: #d77b1f;
            --bg-body: #fffaf4;
            --bg-card: #ffffff;
            --text-dark: #3b2a20;
            --shadow: 0 3px 8px rgba(0,0,0,0.08);
        }

        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
            background-color: var(--bg-body);
            font-family: "Segoe UI", "Roboto", sans-serif;
            color: var(--text-dark);
            background-image: radial-gradient(circle at top left, #fff4e5 0%, #fffaf4 40%, #fffaf4 100%);
        }

        .container {
            flex: 1 0 auto;
        }

        header {
            position: sticky;
            top: 0;
            z-index: 1050;
            background: linear-gradient(90deg, var(--orange-main), var(--orange-dark));
            color: white;
            padding: 1rem 0.5rem;
            border-bottom: 4px solid #d06b12;
            box-shadow: var(--shadow);
            border-radius: 0 0 12px 12px;
        }
        header h1 { margin: 0; font-size: 1.8rem; font-weight: 700; letter-spacing: 0.5px; }
        header a { color: #fff; text-decoration: none; font-weight: 500; transition: all 0.2s; }
        header a:hover { color: #fff8f0; transform: scale(1.03); }

        .hero {
            margin-top: 2rem;
            background: linear-gradient(180deg, #fff7ed, #fffaf4);
            border-radius: 14px;
            box-shadow: var(--shadow);
            padding: 2rem 2.5rem;
            text-align: center;
        }
        .hero h2 { color: var(--orange-dark); font-weight: 700; font-size: 1.8rem; margin-bottom: 0.5rem; }
        .hero p { color: #6a5038; font-size: 1.1rem; margin-bottom: 0; }

        main {
            background-color: var(--bg-card);
            border-radius: 14px;
            padding: 2rem;
            box-shadow: var(--shadow);
            margin-top: 2rem;
        }

        .event-preview { margin-top: 2rem; }
        .event-card {
            background: var(--orange-light);
            border-left: 5px solid var(--orange-main);
            padding: 1rem 1.5rem;
            border-radius: 12px;
            box-shadow: var(--shadow);
            margin-bottom: 1rem;
            transition: all 0.2s ease-in-out;
        }
        .event-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 10px rgba(0,0,0,0.12);
        }

        footer {
            flex-shrink: 0;
            color: #775a3a;
            text-align: center;
            padding: 1.5rem 0;
            font-size: 0.9rem;
            background: var(--orange-light);
            border-top: 2px solid #f3b36a;
            border-radius: 12px 12px 0 0;
            margin-top: auto;
        }

        .btn-primary { background-color: var(--orange-main); border: none; }
        .btn-primary:hover { background-color: var(--orange-dark); }
        .btn-secondary { background-color: #fff; color: var(--orange-dark); border: 1px solid var(--orange-main); }
        .btn-secondary:hover { background-color: var(--orange-light); }

        .alert { border-radius: 8px; }

        .nav-user img { width: 42px; height: 42px; border-radius: 50%; object-fit: cover; border: 2px solid #fff3e0; margin-right: 10px; box-shadow: 0 0 3px rgba(0,0,0,0.2); }
        .user-info { display: flex; flex-direction: column; line-height: 1.1; color: white; }
        .user-info .name { font-weight: 600; }
        .user-info .role { font-size: 0.85rem; color: #ffe6c9; }
    </style>
</head>

<body>
